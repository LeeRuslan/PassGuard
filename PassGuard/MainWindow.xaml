<Window x:Class="PassGuard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PassGuard" 
        Height="550" 
        Width="850">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#F0F0F0" Padding="10" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Master Password:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <PasswordBox x:Name="MasterPasswordBox" Width="200" Margin="0,0,10,0"/>
                <Button Content="Login" Width="80" Click="LoginButton_Click"/>
            </StackPanel>
        </Border>

        <Border Grid.Row="1" Background="#F5F5F5" Padding="10" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="SearchBox" Width="250" Margin="0,0,20,0" TextChanged="SearchBox_TextChanged"/>
                <Button Content="Add" Width="100" Margin="0,0,5,0" Click="AddButton_Click"/>
                <Button Content="Edit" Width="100" Margin="5,0,5,0" Click="EditButton_Click" x:Name="EditButton" IsEnabled="False"/>
                <Button Content="Delete" Width="100" Margin="5,0,5,0" Click="DeleteButton_Click" x:Name="DeleteButton" IsEnabled="False"/>
                <Button Content="Show Password" Width="120" Margin="5,0,0,0" Click="ShowPasswordButton_Click" x:Name="ShowPasswordButton" IsEnabled="False"/>
            </StackPanel>
        </Border>

        <DataGrid Grid.Row="2" 
                  x:Name="PasswordsGrid"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  SelectionChanged="PasswordsGrid_SelectionChanged"
                  Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="*"/>
                <DataGridTextColumn Header="Username" Binding="{Binding Username}" Width="*"/>
                <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="120"/>
                <DataGridTextColumn Header="Created" Binding="{Binding CreatedDate, StringFormat=dd.MM.yyyy}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <Border Grid.Row="3" Background="#E8F4FD" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Password Generator:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBox Grid.Column="1" x:Name="GeneratedPasswordBox" Margin="0,0,10,0" IsReadOnly="True"/>
                <Button Grid.Column="2" Content="Generate" Width="100" Margin="0,0,10,0" Click="GeneratePasswordButton_Click"/>
                <Button Grid.Column="3" Content="Copy" Width="80" Margin="0,0,10,0" Click="CopyPasswordButton_Click"/>
                <StackPanel Grid.Column="4" Orientation="Horizontal">
                    <CheckBox x:Name="UppercaseCheckBox" Content="A-Z" Margin="0,0,10,0" IsChecked="True"/>
                    <CheckBox x:Name="DigitsCheckBox" Content="0-9" IsChecked="True"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
